
<% if user then %>
    <div class="header">
        <span>
            <span class="current_user"><%= user.name %></span>
            <%= button_to "Logout", {controller: :sessions, action: "destroy"}, method: :post, form_class: "inline_button" %>
        </span>

        <span>
            <%= button_to "All Mazes", mazes_path, method: :get, form_class: "inline_button" %>
